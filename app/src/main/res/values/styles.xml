<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SpinnerPopupStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:itemTextAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textColor">#000000</item> <!-- Set selected item text color to black -->
        <item name="android:textSize">20sp</item> <!-- Optional, adjust the size -->
    </style>
</resources>